<Window x:Class="wpf_probe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf_probe"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="160,120,0,0" HorizontalAlignment="Left" Width="613" Height="242" VerticalAlignment="Top">
        <TabControl >
            <TabItem Header="Eingabe ">
                <Grid Background="#FFFDF9F9">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="43*"/>
                        <RowDefinition/>
                        <RowDefinition Height="170*"/>
                    </Grid.RowDefinitions>


                    <Label Width="60" Height="25" Margin="56,10,491,8">Gewinde</Label>
                    <ComboBox x:Name="cbx_gew" MaxDropDownHeight="60" Margin="56,34,0,160" SelectionChanged="cbx_gew_SelectionChanged" IsSynchronizedWithCurrentItem="True" Grid.RowSpan="3" HorizontalAlignment="Left" Width="80">
                        <ComboBoxItem Content="M3" Visibility="Collapsed"/>
                        <ComboBoxItem Content="M4"/>
                        <ComboBoxItem Content="M5"/>
                        <ComboBoxItem Content="M6"/>
                        <ComboBoxItem Content="M8"/>
                        <ComboBoxItem Content="M10"/>
                        <ComboBoxItem Content="M12"/>
                        <ComboBoxItem Content="M16"/>
                        <ComboBoxItem Content="M20"/>
                        <ComboBoxItem Content="M24"/>
                        <ComboBoxItem Content="M30"/>
                        <ComboBoxItem Content="M36"/>


                    </ComboBox>



                    <Label Width="110" Height="25" Margin="146,9,351,9">Schaftlänge (mm)</Label>
                    <ComboBox x:Name="cbx_länge" MaxDropDownHeight="60" Margin="0,34,381,160" Grid.RowSpan="3" HorizontalAlignment="Right" Width="80">
                        <ComboBoxItem Content="10"/>
                        <ComboBoxItem Content="16"/>
                        <ComboBoxItem Content="20"/>
                        <ComboBoxItem Content="30"/>
                        <ComboBoxItem Content="40"/>


                    </ComboBox>


                    <Label Width="100" Height="25" Margin="256,9,251,9">Stückzahl</Label>
                    <ComboBox x:Name="cbx_stkz" MaxDropDownHeight="60"  Margin="0,34,266,160" Grid.RowSpan="3" HorizontalAlignment="Right" Width="80">
                        <ComboBoxItem Content="50"/>
                        <ComboBoxItem Content="100"/>
                        <ComboBoxItem Content="200"/>
                        <ComboBoxItem Content="500"/>


                    </ComboBox>

                    <Label Width="120" Height="25" Margin="356,10,0,8" HorizontalAlignment="Left">festigkeitsklasse</Label>

                    <RadioButton Height=" 20" Margin="356,39,0,155" Grid.RowSpan="3" HorizontalAlignment="Left" Width="49">5.8</RadioButton>

                    <RadioButton Height="20" Margin="356,12,0,138" Grid.Row="2" HorizontalAlignment="Left" Width="49">8.8</RadioButton>

                    <RadioButton Height="20" Margin="356,32,0,118" Grid.Row="2" HorizontalAlignment="Left" Width="45">9.8</RadioButton>

                    <RadioButton Height="20" Margin="356,52,0,98" Grid.Row="2" HorizontalAlignment="Left" Width="45">10.9</RadioButton>

                    <Image Source="" Width="150" Height="100" Margin="457,9,0,105" Grid.RowSpan="3"></Image>

                </Grid>

            </TabItem>
            <TabItem Header="Ausgabe">



            </TabItem>

        </TabControl>
    </Grid>
</Window>
